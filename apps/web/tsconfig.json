{
  "extends": "@pocketpenny/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@pocketpenny/eslint-config/*": ["../../packages/eslint-config/*"],
      "@pocketpenny/ui/*": ["../../packages/ui/src/*"],
      "@pocketpenny/types/*": ["../../packages/types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "next.config.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
